<%= form_for(@user) do |f| %>

<%= error_messages_for(@user) %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <% if @current_user.admin? %>
	  <div class="field">
	    <%= f.label :admin %><br />
	    <%= f.check_box :admin %>
	  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
